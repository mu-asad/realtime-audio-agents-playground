# =============================================================================
# OpenAI Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# OpenAI Realtime Model (default: gpt-4o-realtime-preview-2024-10-01)
OPENAI_MODEL=gpt-4o-realtime-preview-2024-10-01

# =============================================================================
# Google Calendar Integration (Optional)
# =============================================================================
# Required for Google Calendar MCP integration
# See docs/GOOGLE_CALENDAR_SETUP.md for setup instructions

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REFRESH_TOKEN=your-refresh-token
GOOGLE_CALENDAR_ID=primary

# =============================================================================
# Spotify Integration (Optional)
# =============================================================================
# Required for Spotify MCP integration
# See docs/SPOTIFY_SETUP.md for setup instructions

SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://127.0.0.1:8888/callback
SPOTIFY_REFRESH_TOKEN=your-spotify-refresh-token

# =============================================================================
# Voice Client Configuration
# =============================================================================
# Audio sample rate (default: 16000)
VOICE_CLIENT_SAMPLE_RATE=16000

# Audio device index (optional, leave empty for default device)
# VOICE_CLIENT_DEVICE_INDEX=0

# =============================================================================
# Session Configuration
# =============================================================================
# Voice options: alloy, echo, shimmer, ash, ballad, coral, sage, verse
VOICE_CLIENT_VOICE=ash

# Speech speed: 0.25 to 4.0 (1.0 is normal speed)
VOICE_CLIENT_SPEECH_SPEED=1.5

# Modalities: text, audio (comma-separated)
VOICE_CLIENT_MODALITIES=audio

# Input audio format: pcm16 or g711_ulaw or g711_alaw
VOICE_CLIENT_INPUT_AUDIO_FORMAT=pcm16

# Output audio format: pcm16 or g711_ulaw or g711_alaw
VOICE_CLIENT_OUTPUT_AUDIO_FORMAT=pcm16

# =============================================================================
# Turn Detection (Voice Activity Detection)
# =============================================================================
# VAD threshold: 0.0 to 1.0 (lower = more sensitive)
VOICE_CLIENT_VAD_THRESHOLD=0.5

# Prefix padding in milliseconds
VOICE_CLIENT_VAD_PREFIX_PADDING_MS=300

# Silence duration in milliseconds before turn ends
VOICE_CLIENT_VAD_SILENCE_DURATION_MS=500

# =============================================================================
# Transcription
# =============================================================================
# Enable input audio transcription (true/false)
VOICE_CLIENT_TRANSCRIPTION_ENABLED=true

# Transcription model
VOICE_CLIENT_TRANSCRIPTION_MODEL=whisper-1

